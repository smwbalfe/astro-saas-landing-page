---
// HowPrintPigeonWorks.astro
// Define the props interface for the component
interface Step {
    number: number;
    icon: string;
    title: string;
    description: string;
}

interface Props {
    title?: string;
    subtitle?: string;
    steps?: Step[];
}

// Default values
const {
    title = "How PrintPigeon Works",
    subtitle = "Four simple steps to get your documents printed and delivered",
    steps = [
        {
            number: 1,
            icon: "upload",
            title: "Upload Your Document",
            description:
                "Simply upload your PDF & DOCX documents, we support all standard file types",
        },
        {
            number: 2,
            icon: "edit",
            title: "Enter Delivery Details",
            description:
                "Add the recipient's address and any additional instructions for your order",
        },
        {
            number: 3,
            icon: "print",
            title: "We Print & Mail",
            description:
                "Our team prints your documents on high-quality paper and prepares them for mailing",
        },
        {
            number: 4,
            icon: "truck",
            title: "Track Your Delivery",
            description:
                "Monitor your shipment with real-time tracking information by email",
        },
    ],
} = Astro.props;
---

<div class="max-w-6xl mx-auto px-4 py-8 my-8 font-sans">
    <div class="text-center mb-12">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">
            {title}
        </h1>
        <p class="text-lg text-gray-600">{subtitle}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 relative">
        {
            steps.map((step, index) => (
                <div class="flex flex-col items-center text-center relative">
                    <div class="relative mb-4">
                        <div class="w-12 h-12 flex items-center justify-center text-blue-600">
                            {step.icon === "upload" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
                                    <polyline points="17 8 12 3 7 8" />
                                    <line x1="12" y1="3" x2="12" y2="15" />
                                </svg>
                            )}
                            {step.icon === "edit" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <path d="M12 20h9" />
                                    <path d="M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4Z" />
                                </svg>
                            )}
                            {step.icon === "print" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <polyline points="6 9 6 2 18 2 18 9" />
                                    <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2" />
                                    <rect x="6" y="14" width="12" height="8" />
                                </svg>
                            )}
                            {step.icon === "truck" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <path d="M1 3h15v13H1z" />
                                    <path d="M16 8h4l3 3v5h-7V8z" />
                                    <circle cx="5.5" cy="18.5" r="2.5" />
                                    <circle cx="18.5" cy="18.5" r="2.5" />
                                </svg>
                            )}
                        </div>
                        <div class="absolute -top-2 -right-2 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold">
                            {step.number}
                        </div>
                    </div>

                    <h3 class="text-xl font-semibold text-gray-800 mb-2">
                        {step.title}
                    </h3>
                    <p class="text-gray-600 max-w-xs">{step.description}</p>

                    {index < steps.length - 1 && (
                        <div class="hidden md:block absolute top-6 left-full w-full h-0.5 bg-gray-200 -z-10 transform -translate-x-1/2" />
                    )}
                </div>
            ))
        }
    </div>
</div>
